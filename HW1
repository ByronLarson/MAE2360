Problem 1

Solve quadratic equation


#include <stdio.h>
#include <math.h>
int main()
{
int a,b,c;
float x1,x2,n;
printf("Enter a, b, and c seperated by a space:");
scanf("%d %d %d",&a,&b,&c);
    if(b*b-4*a*c<0)
    printf("error");
    else
    n=b*b-4*a*c;
    x1=(-b+sqrt(n))/(2*a);
    x2=(-b-sqrt(n))/(2*a);
    printf("Your roots are: %f and %f",x1,x2);
}


Problem 2

Interactively read temperature in Celsius and convert it to Fahrenheit.

#include <stdio.h>
#include <math.h>
int main(){
    
float c,f;

printf("Enter the Celsius degree:");

scanf("%f", &c); 
    printf("The temperature in Fahrenheit is:%f.\n",f=9/5*c+32);
return 0;
}



Problem 3

Write a C program to sum up the first 100, 1000, and then 10000 terms of the series, respectively, to see whether the sum is getting closer to pi/4, an = ((-1)^(n+1))/(2n-1)

#include <stdio.h>
#include <math.h>

int main()
{
	int i,j,k;
	float sum1=0;
	float sum2=0;
	float sum3=0;

	for(i=1;i<=100;i++)
	{
    	sum1 =sum1+(pow((-1),i+1)/(2*i-1));
	}
	
	for(j=1;j<=1000;j++)
	{
    	sum2 =sum2+(pow((-1),j+1)/(2*j-1));
	}
	
	for(k=1;k<=10000;k++)
	{
    	sum3 =sum3+(pow((-1),k+1)/(2*k-1));
	}
	printf ("The sum of the first 100 terms is: %f \n",sum1); 
    printf ("The sum of the first 1000 terms is: %f \n",sum2);
    printf ("The sum of the first 10000 terms is: %f \n",sum3);
	
	return 0;
}


Problem 4

Sum the first 100, 1000, 10000 terms of the series of an = 1/i^2

#include<iostream>
#include <math.h>


int main()
{
	int i,j,k;
	float sum1=0;
	float sum2=0;
	float sum3=0;

	for(i=1;i<=100;i++)
	{
    	sum1 += 1.0/pow(i,2);
	}
	
	for(j=1;j<=1000;j++)
	{
    	sum2 += 1.0/pow(j,2);
	}
	
	for(k=1;k<=10000;k++)
	{
    	sum3 += 1.0/pow(k,2;
	}
	printf ("The sum of the first 100 terms is: %f \n",sum1); 
    printf ("The sum of the first 1000 terms is: %f \n",sum2);
    printf ("The sum of the first 10000 terms is: %f \n",sum3);
	
	return 0;
}
Problem 5

sequence an+2 = -2an+1 + 3an

#include <stdio.h>

int main() 
{

int i, a0=2, a1=-1, an=0;

for(i=1; i<=16; ++i)
{
    an = -2*a1 + 3*a0;
    a0 = a1;
    a1 = an;
}

printf("if n = 17, a17 = %d ", an);
return 0;
}

Problem 6

make a table of functions

#include <stdio.h>
#include <math.h>

double f(float x)
{
    return x-pow(x,3)/6+pow(x,5)/120;
}

int main ()
{
    float i;
    printf("x          f(x)    sin(x)  \n");
    printf("--------------------------\n");
    for(i=0;i<=2;i+=0.1)
    {
        printf("%f %f %f \n",i,f(i),sin(i));
        printf("--------------------------\n");
    }
    
    return 0;
}

Problem 7

The summation from 1 to 11 of 1/n!

#include <iostream>

int factorial (int n)
{

 int i,fact=1;    
   
    for(i=1;i<=n;i++)
    {    
      fact=fact*i;    
    }    
    return fact;  
}   
  


int main ()
{
    int j;
    float sum;
  for(j=1;j<=11;j++)
    {
        printf("%d \n",j);
    	sum =sum + (1.0/factorial (j));
    	printf("%f \n",sum);
	}
	
	printf ("The summation from 1 to 11 of 1/n!: %f \n",sum);
}

Problem 8

#include <stdio.h>
#include <math.h>

int main()
{
    float i,x,x_old;
    printf("Enter a guess: ");
    scanf("%f",&x);
    while(x<0 || x<1)
    {
        printf("Enter a value etween 0 and 1");
        scanf("%f",&x);
    }
    
    while(x_old!=x)
    {
        x_old=x;
        x=1/(1+(x*x));
        printf("Print vaules of %0.7f and %0.7f \n",x,x_old);
    }
    return 0;
}

Problem 9

 set of 10 float numbers is given below. Write a C program to show how many out of 10 are between 2.0 and 10.0 (including these two values).

#include <stdio.h>

int main()
{
int i,count=0; 
float arr[10]={1.0,9.0,13.0,8.5,3.0,9.0,17.0,4.5,10.0,2.0}; 

for(i=0;i<10;i++)
{
    if(arr[i]>=2.0 && arr[i]<=10.0) 
    count = count +1;
}
printf("\nNo of numbers between 2.0 and 10.0 are: %d",count); 

return 0;
}
